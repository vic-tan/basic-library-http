<resources>

    <!--  公用的button 矩形 -->
    <style name="base_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120px</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">40px</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--  公用的button 圆角形 -->
    <style name="base_button_corners" parent="base_button">
        <item name="android:background">@drawable/common_button_corners_bg</item>
    </style>
</resources>
